<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.HomeFragment">


    <include
        android:id="@+id/layoutCustomToolbar"
        layout="@layout/layout_toolbar"/>

    <ImageView
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="@dimen/home_image_height"
        android:src="@drawable/tumb_image"/>


    <Button
        android:id="@+id/btnAddTvShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_new_tv_show"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="true"
        android:layout_marginTop="@dimen/_44dp"/>

    <Button
        android:id="@+id/btnShowList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_list_of_added_tv_shows"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="true"
        android:layout_marginTop="@dimen/_64dp"/>


</LinearLayout>