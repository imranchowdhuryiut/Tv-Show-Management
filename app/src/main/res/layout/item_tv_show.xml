<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/_1dp"
    android:layout_marginBottom="@dimen/_1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_marginStart="@dimen/_4dp"
        android:layout_marginEnd="@dimen/_4dp"
        android:layout_margin="@dimen/_2dp"
        app:cardElevation="@dimen/_4dp"
        app:cardCornerRadius="@dimen/_4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="@dimen/_16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvShowName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Black Mirror"
                android:textSize="@dimen/_16sp"/>


            <TextView
                android:layout_marginTop="@dimen/_2dp"
                android:layout_marginBottom="@dimen/_2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvReleaseDatePrompt"
                android:layout_below="@+id/tvShowName"
                android:text="@string/release_date_colon"
                android:textStyle="bold"
                android:textSize="@dimen/_16sp"/>

            <TextView
                android:id="@+id/tvReleaseDate"
                android:layout_marginTop="@dimen/_2dp"
                android:layout_marginBottom="@dimen/_2dp"
                android:layout_marginStart="@dimen/_4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="8 March 2019"
                android:layout_below="@+id/tvShowName"
                android:textSize="@dimen/_16sp"
                android:layout_toEndOf="@+id/tvReleaseDatePrompt"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvSeasonsPrompt"
                android:layout_below="@+id/tvReleaseDatePrompt"
                android:text="@string/seasons_colon"
                android:textStyle="bold"
                android:textSize="@dimen/_16sp"/>

            <TextView
                android:id="@+id/tvSeasons"
                android:layout_marginStart="@dimen/_4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="19"
                android:layout_below="@+id/tvReleaseDatePrompt"
                android:textSize="@dimen/_16sp"
                android:layout_toEndOf="@+id/tvSeasonsPrompt"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>